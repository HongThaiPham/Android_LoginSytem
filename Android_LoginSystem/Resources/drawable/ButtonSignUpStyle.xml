<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="false">
    <layer-list>
      <item android:right="5dp" android:top="5dp">
        <shape>
          <corners android:radius="2dp"/>
          <solid android:color="#d6d6d6"/>
        </shape>
      </item>

      <item android:bottom="2dp" android:left="2dp">
        <shape>
          <gradient android:angle="270" android:endColor="#F57847" android:startColor="#F57847" />
          <sroke android:width="1dp" android:color="#BABABA"/>
          <corners android:radius="4dp"/>
          <padding android:top="10dp" android:right="10dp" android:bottom="10dp" android:left="10dp"/>
        </shape>
      </item>
    </layer-list>
  </item>

  <item android:state_pressed="true">
    <layer-list>
      <item android:right="5dp" android:top="5dp">
        <shape>
          <corners android:radius="2dp"/>
          <solid android:color="#d6d6d6"/>
        </shape>
      </item>

      <item android:bottom="2dp" android:left="2dp">
        <shape>
          <gradient android:angle="270" android:endColor="#E67D55" android:startColor="#F57847" />
          <sroke android:width="1dp" android:color="#BABABA"/>
          <corners android:radius="4dp"/>
          <padding android:top="10dp" android:right="10dp" android:bottom="10dp" android:left="10dp"/>
        </shape>
      </item>
    </layer-list>
  </item>
</selector>